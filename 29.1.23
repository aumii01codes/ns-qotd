#include <iostream>
#include <string>

int main() {
    std::string S;
    std::cin >> S;
    int index = -1;
    for (int i = S.length() - 1; i >= 0; i--) {
        if (S[i] == 'a') {
            index = i + 1;
            break;
        }
    }
    std::cout << index << std::endl;
    return 0;
}
